import React, { useState } from 'react';
import { View, Text, TextInput, TouchableOpacity, StyleSheet, ScrollView } from 'react-native';

export default function App() {
  const [page, setPage] = useState('login');

  // صفحة تسجيل الدخول
  if (page === 'login') {
    return (
      <View style={styles.container}>
        <Text style={styles.title}>تطبيق التوفيق للخدمات</Text>
        <TextInput 
          style={styles.input} 
          placeholder="رقم الهاتف" 
          placeholderTextColor="#aaa" 
        />
        <TouchableOpacity 
          style={styles.button} 
          onPress={() => setPage('home')}>
          <Text style={styles.buttonText}>دخول</Text>
        </TouchableOpacity>
      </View>
    );
  }

  // الصفحة الرئيسية بعد الدخول
  return (
    <ScrollView style={styles.mainContainer}>
      <Text style={styles.welcomeText}>مرحباً بك في التوفيق</Text>
      <View style={styles.serviceCard}>
        <Text style={styles.serviceTitle}>خدمة التوصيل</Text>
        <Text>نصلك أينما كنت بأسرع وقت</Text>
      </View>
      <TouchableOpacity 
        style={styles.backButton} 
        onPress={() => setPage('login')}>
        <Text style={styles.buttonText}>خروج</Text>
      </TouchableOpacity>
    </ScrollView>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#111',
    alignItems: 'center',
    justifyContent: 'center',
    padding: 20,
  },
  mainContainer: {
    flex: 1,
    backgroundColor: '#fff',
    padding: 20,
    paddingTop: 50,
  },
  title: {
    fontSize: 28,
    color: '#fff',
    marginBottom: 30,
    fontWeight: 'bold',
  },
  input: {
    width: '100%',
    height: 50,
    backgroundColor: '#222',
    borderRadius: 10,
    paddingHorizontal: 15,
    color: '#fff',
    marginBottom: 20,
    textAlign: 'right',
  },
  button: {
    width: '100%',
    height: 50,
    backgroundColor: '#007AFF',
    borderRadius: 10,
    alignItems: 'center',
    justifyContent: 'center',
  },
  buttonText: {
    color: '#fff',
    fontSize: 18,
    fontWeight: 'bold',
  },
  welcomeText: {
    fontSize: 24,
    textAlign: 'center',
    marginBottom: 20,
  },
  serviceCard: {
    padding: 20,
    backgroundColor: '#f8f8f8',
    borderRadius: 10,
    marginBottom: 15,
    borderWidth: 1,
    borderColor: '#ddd',
  },
  serviceTitle: {
    fontSize: 18,
    fontWeight: 'bold',
    marginBottom: 5,
  },
  backButton: {
    marginTop: 20,
    backgroundColor: '#ff3b30',
    padding: 15,
    borderRadius: 10,
    alignItems: 'center',
  }
});
